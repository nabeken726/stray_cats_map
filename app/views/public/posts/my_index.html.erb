
<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h2><%= @user.name %>さん<br>の猫一覧</h2>
      <div><%= image_tag @user.get_image,class: "rounded-circle", size: "150x150" %></div>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <table class='table table-hover table-inverse'>
        <tr>
          <th>画像</th>
          <th>タイトル</th>
          <th>内容</th>
          <th>ジャンル</th>
        </tr>
      <!--投稿がない場合の分岐-->
        <% if  @posts.present? %>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.image,:size =>'100x100' %></td>
              <td><%= link_to post.title, public_post_path(post) %></td>
              <td><%= post.introduction %></td>
              <td><%= post.genre.genre %></td>
          <% end %>
        <% else %>
            <p>まだ投稿はありません</p>
        <% end %>
      </table>
      <!--ページネーション入れる-->
      <p class="page-item active"><%= paginate @posts %></p>
    </div>
  </div>
