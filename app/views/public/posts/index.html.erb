<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h2>Cat's</h2>
      <p><%= link_to "My Cat's", public_posts_my_index_path, style: "font-family: Caveat; font-size: 20px;" %></p>
      <!--ジャンル検索のテンプレート-->
      <%= render "public/posts/genre_post", genres: @genres %>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <!--ソートのテンプレート-->
      <div class="mb-5"><%= render "public/posts/sort_form", post: @post %></div>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>画像</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>投稿日</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.user.get_image,class: "rounded-circle", size: "50x50" %></td>
            <td><%= image_tag post.image, size: '150x100' %></td>
            <td><%= link_to post.title, public_post_path(post) %></td>
            <td class="introduction"><%= post.introduction %></td>
            <td class="day"><%= l post.created_at, format: :short %></td>
            <td><%= post.genre.genre %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination" style="justify-content: center; margin-top: 30px;">
        <!--ページネーション入れる-->
        <p><%= paginate @posts %></p>
      </div>
    </div>
  </div>


