<h1>MAPで使用するページ</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center; margin-top: 50px;">
      <h2>投稿一覧</h2>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <table class='table'>
        <thead>
          <tr>
            <th>画像</th>
            <th>タイトル</th>
            <th>説明</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= link_to post.title, public_post_path(post) %></td>
            <td><%= post.introduction %></td>
            <td><%= post.genre.genre %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" style="text-align: center;">

    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="pagination" style="justify-content: center; margin-top: 30px;">
      </div>
    </div>
  </div>
</div>


