<div class="container">
  <%= form_with model: @post, url: public_post_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
      <h2>投稿編集</h2>
    </div>
    <div class="col-md-8" style="margin-top: 50px;">
      <table class="table">
        <div class="field">
          <tr>
            <th><%= f.label :画像 %></th>
            <td>
                <%= f.file_field :image %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :タイトル %>
            </th>
            <td>
              <%= f.text_field :title %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :内容 %>
            </th>
            <td>
              <%= f.text_field :introduction %>
            </td>
            <tr>
              <th><%= f.label :ジャンル %></th>
              <th>
            　<%= f.collection_select(:genre_id, Genre.all, :id, :genre, prompt: "--選択してください--")  %>
              </th>
            </tr>
        </div>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" style="text-align: center;">
      <%= f.submit "編集内容を保存" %>
      <% end %>
    </div>
  </div>
</div>