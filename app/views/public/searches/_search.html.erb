<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: public_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, size: 40, placeholder: "検索内容", style: 'font-size: 14px;' %>
      <%= f.submit "検索", class: "btn btn-primary", style: 'font-size: 14px;' %>
    <% end %>
  </div>
<% end %>