
<div class="container">
  <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-md-3" style="margin-top: 50px; text-align: center;">
      <h2>会員情報編集</h2>
    </div>
    <div class="col-md-8" style="margin-top: 50px;">
      <table class="table">
        <div class="field">
          <tr>
            <th><%= f.label :プロフィールアイコン %></th>
            <th>
                <%= f.file_field :user_image_url %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :氏名 %>
            </th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
        </div>
        <div class="field">
          <tr>
            <th>
              <%= f.label :メール　アドレス %>
            </th>
            <td>
              <%= f.text_field :email %>
            </td>
            <td></td>
          </tr>
        </div>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12" style="text-align: center;">
      <%= f.submit "編集内容を保存" %>
      <% end %>
    </div>
  </div>
</div>