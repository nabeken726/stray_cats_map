<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h2> User Log in</h2>
    </div>
    <div class="col-md-6" style="margin-top: 50px; text-align: center;">
      <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :パスワード %><br>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
      <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :次回から自動的にログイン %>
    </div>
      <% end %>
    <div class="actions">
      <%= f.submit "ログイン",class: 'btn btn-success' %>
    </div>
      <% end %>
    <div class="mt-2">
      <%= render "public/shared/links" %>
    </div>
    <div class="mt-2">
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-success sign_in", method: :post %>
    </div>
    </div>
  </div>
</div>