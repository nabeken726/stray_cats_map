<!--見たボタンとかわいいボタンの部分テンプレート-->
    <% if @post.cuted_by?(current_user) %>
    <p>
      <%= link_to public_post_cute_path(@post), method: :delete do %>
      <i class="fa-brands fa-gratipay"></i><%= @post.cutes.count %> かわいい
      <% end %>
    </p>
      <% else %>
    <p>
      <%= link_to public_post_cutes_path(@post), method: :post do %>
      <i class="fa-brands fa-gratipay"></i><%= @post.cutes.count %> かわいい
      <% end %>
    </p>
    <% end %>

    <% if @post.looked_by?(current_user) %>
　　<p>
      <%= link_to public_post_look_path(@post), method: :delete do %>
      <i class="fa-solid fa-eye"></i><%= @post.looks.count %> 見た
    <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_post_looks_path(@post), method: :post do %>
      <i class="fa-solid fa-eye"></i><%= @post.looks.count %> 見た
    <% end %>
    </p>
    <% end %>