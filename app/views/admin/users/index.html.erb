<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h2>User's</h2>
    </div>
      <div class="col-md-6 ml-5" style="text-align: center; margin-top: 50px;">
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>ユーザーID</th>
              <th>プロフィールアイコン</th>
              <th>ニックネーム</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= image_tag user.get_image,class: "rounded-circle", size: "50x50" %></td>
              <td><%= link_to user.name, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <% if user.is_deleted == false %>
                <td>有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>