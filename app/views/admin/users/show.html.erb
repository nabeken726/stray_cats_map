<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5" style="text-align: center;">
      <h2>User Details</h2>
    </div>
    <div class="col-md-6" style="margin-top: 50px; text-align: center;">
      <table  class="table table-inverse">
        <tr>
          <th>プロフィールアイコン</th>
          <td><%= image_tag @user.get_image,class: "rounded-circle", size: "150x150" %></td>
        </tr>
        <tr>
          <th>ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>登録日</th>
          <td><%= l @user.created_at, format: :short %></td>
        </tr>
        <tr>
          <th>ユーザーステータス</th>
          <!--ステータスの記述を行う。-->
          <td><%= user_status(@user) %></td>
        </tr>
      </table>
      <div style="text-align: center; margin-top: 50px;">
        <p><%= link_to "編集", edit_admin_user_path(@user), class: 'btn btn-success' %></p><br>
        <p><%= link_to "ユーザー一覧", admin_users_path, class: 'btn btn-primary' %></p>
      </div>
    </div>
  </div>
</div>