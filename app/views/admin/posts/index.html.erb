<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h2>Cat's</h2>
    </div>
    <div class="col-md-8 ml-5" style="text-align: center; margin-top: 50px;">
      <table class='table table-hover table-inverse'>
          <tr>
            <th>投稿者</th>
            <th>画像</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>ジャンル</th>
          </tr>
          <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.user.get_image,class: "rounded-circle", size: "50x50" %></td>
            <td><%= image_tag post.image,:size =>'150x100' %></td>
            <td><%= link_to post.title, admin_post_path(post) %></td>
            <td class="introduction"><%= post.introduction %></td>
            <td><%= post.genre.genre %></td>
          <% end %>
      </table>
    <div class="pagination" style="justify-content: center; margin-top: 30px;">
      <!--ページネーション入れる-->
      <p style=""><%= paginate @posts %></p>
    </div>
  </div>
</div>
